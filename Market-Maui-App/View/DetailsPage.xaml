<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Market_Maui_App.DetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Market_Maui_App.ViewModel"
    x:DataType="viewmodel:ProductDetailsViewModel"
    BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*">
            <BoxView
                Color="{StaticResource Primary}"
                Grid.RowSpan="2"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"/>

            <Border StrokeShape="RoundRectangle 80"
                    Grid.Row="0"
                    Stroke="White"
                    StrokeThickness="8"
                    HeightRequest="160"
                    WidthRequest="160"
                    Margin="0,8,0,0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                
                <Image Aspect="AspectFill"
                        HeightRequest="160"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Source="{Binding Product.Image}"
                        WidthRequest="160"/>
            </Border>

            <Label Style="{StaticResource LargeLabel}" 
                   Grid.Row="1"
                   TextColor="White"
                   FontSize="30"
                   FontAttributes="Bold"
                   Text="{Binding Product.Name}" 
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>
        
            <BoxView  
                Style="{DynamicResource Dinamic}"
                Grid.Row="2"
                Grid.RowSpan="1"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                Margin="0,0,0,-20"
                CornerRadius="20"/>
        
            <VerticalStackLayout Grid.Row="2" Padding="10" Spacing="10">
                <Label Style="{StaticResource MediumLabel}" FontSize="20" Text="{Binding Product.Stock, StringFormat='Stock: {0}'}" />
                <Label Style="{StaticResource MediumLabel}" FontSize="20" Text="{Binding Product.Target_Stock, StringFormat='Target Stock: {0}'}" />
                <Button
                    Text="I ate one ðŸ¤ª" 
                    HorizontalOptions="Center" 
                    WidthRequest="200" 
                    Margin="8"
                    Style="{StaticResource ButtonOutline}"/>
            </VerticalStackLayout>
            
        </Grid>
    </ScrollView>
</ContentPage>
    
 
